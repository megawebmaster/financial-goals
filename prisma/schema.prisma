generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int          @id @default(autoincrement())
  username String       @unique
  password String
  salt     String
  budgets  BudgetUser[] @relation(name: "AccessibleBudgets")
}

model BudgetUser {
  budgetId Int
  budget   Budget  @relation(name: "BudgetUsers", fields: [budgetId], references: [id], onDelete: Cascade)
  userId   Int
  user     User    @relation(name: "AccessibleBudgets", fields: [userId], references: [id], onDelete: Cascade)
  name     String
  key      String
  isOwner  Boolean @default(false)

  @@id([budgetId, userId])
  @@unique([userId, name])
}

model Budget {
  id    Int          @id @default(autoincrement())
  users BudgetUser[] @relation(name: "BudgetUsers")
  goals BudgetGoal[] @relation(name: "BudgetGoals")
}

model BudgetGoal {
  id             Int    @id @default(autoincrement())
  budgetId       Int
  budget         Budget @relation(name: "BudgetGoals", fields: [budgetId], references: [id])
  name           String
  requiredAmount String
}
