{
  "name": "finance-goals",
  "private": true,
  "version": "0.0.0",
  "description": "App for tracking finance goals.",
  "type": "module",
  "scripts": {
    "build": "vite build && vite build --ssr",
    "db:reset": "prisma migrate reset -f",
    "dev": "vite dev",
    "ci:server": "SESSION_SECRET=test PORT=5555 DATABASE_URL=file:./test.db run-s db:reset 'dev -- --host 127.0.0.1'",
    "emails": "email dev --dir app/emails",
    "seed": "tsx prisma/scripts/seed.ts",
    "start": "remix-serve build/index.js",
    "lint": "eslint app/",
    "lint:fix": "eslint --fix app/",
    "test": "playwright test",
    "typecheck": "tsc"
  },
  "author": "Amadeusz Starzykiewicz <megawebmaster@gmail.com>",
  "license": "ISC",
  "prisma": {
    "seed": "npm run seed"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@react-email/components": "0.0.16",
    "@remix-run/node": "^2.4.0",
    "@remix-run/react": "^2.4.0",
    "@remix-run/serve": "^2.4.0",
    "http-status-codes": "^2.3.0",
    "i18next": "^23.11.2",
    "i18next-browser-languagedetector": "^7.2.1",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-backend": "^2.5.0",
    "isbot": "^3.7.1",
    "nodemailer": "^6.9.13",
    "ramda": "^0.29.1",
    "react": "^18.2.0",
    "react-async": "^10.0.1",
    "react-dom": "^18.2.0",
    "react-email": "2.1.1",
    "react-i18next": "^14.1.0",
    "remix-auth": "^3.6.0",
    "remix-auth-form": "^1.4.0",
    "remix-i18next": "^6.1.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@remix-run/dev": "^2.4.0",
    "@remix-run/eslint-config": "^2.4.0",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/ramda": "^0.29.9",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
